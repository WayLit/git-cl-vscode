{
  "name": "git-cl-vscode",
  "displayName": "git-cl â€” Changelist Manager",
  "description": "Manage git changelists directly in VS Code. Organizes working changes into logical groups for focused commits.",
  "version": "0.0.1",
  "packageManager": "pnpm@10.30.0",
  "publisher": "git-cl",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/WayLit/git-cl-vscode.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "SCM Providers"
  ],
  "activationEvents": [
    "workspaceContains:.git"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "git-cl.showStatus",
        "title": "Show Changelist Status",
        "category": "git-cl"
      },
      {
        "command": "git-cl.addToChangelist",
        "title": "Add to Changelist",
        "category": "git-cl"
      },
      {
        "command": "git-cl.removeFromChangelist",
        "title": "Remove from Changelist",
        "category": "git-cl",
        "icon": "$(close)"
      },
      {
        "command": "git-cl.openFileDiff",
        "title": "Open Diff",
        "category": "git-cl",
        "icon": "$(diff)"
      },
      {
        "command": "git-cl.deleteChangelist",
        "title": "Delete Changelist",
        "category": "git-cl",
        "icon": "$(trash)"
      },
      {
        "command": "git-cl.deleteAllChangelists",
        "title": "Delete All Changelists",
        "category": "git-cl"
      },
      {
        "command": "git-cl.stageChangelist",
        "title": "Stage Changelist",
        "category": "git-cl",
        "icon": "$(add)"
      },
      {
        "command": "git-cl.unstageChangelist",
        "title": "Unstage Changelist",
        "category": "git-cl",
        "icon": "$(remove)"
      },
      {
        "command": "git-cl.commitChangelist",
        "title": "Commit Changelist",
        "category": "git-cl",
        "icon": "$(check)"
      },
      {
        "command": "git-cl.diffChangelist",
        "title": "Diff Changelist",
        "category": "git-cl",
        "icon": "$(diff)"
      },
      {
        "command": "git-cl.checkoutChangelist",
        "title": "Checkout (Revert) Changelist",
        "category": "git-cl",
        "icon": "$(discard)"
      },
      {
        "command": "git-cl.stashChangelist",
        "title": "Stash Changelist",
        "category": "git-cl",
        "icon": "$(archive)"
      },
      {
        "command": "git-cl.stashAllChangelists",
        "title": "Stash All Changelists",
        "category": "git-cl"
      },
      {
        "command": "git-cl.unstashChangelist",
        "title": "Unstash Changelist",
        "category": "git-cl",
        "icon": "$(package)"
      },
      {
        "command": "git-cl.unstashChangelistForce",
        "title": "Unstash Changelist (Force)",
        "category": "git-cl"
      },
      {
        "command": "git-cl.unstashAllChangelists",
        "title": "Unstash All Changelists",
        "category": "git-cl"
      },
      {
        "command": "git-cl.branchFromChangelist",
        "title": "Branch from Changelist",
        "category": "git-cl",
        "icon": "$(git-branch)"
      }
    ],
    "menus": {
      "scm/resourceGroup/context": [
        {
          "command": "git-cl.stageChangelist",
          "when": "scmProvider == git-cl && scmResourceGroup =~ /^cl:/",
          "group": "inline@1"
        },
        {
          "command": "git-cl.unstageChangelist",
          "when": "scmProvider == git-cl && scmResourceGroup =~ /^cl:/",
          "group": "inline@2"
        },
        {
          "command": "git-cl.commitChangelist",
          "when": "scmProvider == git-cl && scmResourceGroup =~ /^cl:/",
          "group": "inline@3"
        },
        {
          "command": "git-cl.deleteChangelist",
          "when": "scmProvider == git-cl && scmResourceGroup =~ /^cl:/",
          "group": "inline@9"
        },
        {
          "command": "git-cl.stageChangelist",
          "when": "scmProvider == git-cl && scmResourceGroup =~ /^cl:/",
          "group": "1_modification@1"
        },
        {
          "command": "git-cl.unstageChangelist",
          "when": "scmProvider == git-cl && scmResourceGroup =~ /^cl:/",
          "group": "1_modification@2"
        },
        {
          "command": "git-cl.commitChangelist",
          "when": "scmProvider == git-cl && scmResourceGroup =~ /^cl:/",
          "group": "1_modification@3"
        },
        {
          "command": "git-cl.deleteChangelist",
          "when": "scmProvider == git-cl && scmResourceGroup =~ /^cl:/",
          "group": "1_modification@4"
        },
        {
          "command": "git-cl.diffChangelist",
          "when": "scmProvider == git-cl && scmResourceGroup =~ /^cl:/",
          "group": "2_diff@1"
        },
        {
          "command": "git-cl.checkoutChangelist",
          "when": "scmProvider == git-cl && scmResourceGroup =~ /^cl:/",
          "group": "3_revert@1"
        },
        {
          "command": "git-cl.stashChangelist",
          "when": "scmProvider == git-cl && scmResourceGroup =~ /^cl:/",
          "group": "4_stash@1"
        },
        {
          "command": "git-cl.branchFromChangelist",
          "when": "scmProvider == git-cl && scmResourceGroup =~ /^cl:/",
          "group": "5_branch@1"
        },
        {
          "command": "git-cl.unstashChangelist",
          "when": "scmProvider == git-cl && scmResourceGroup =~ /^stash:/",
          "group": "inline@1"
        },
        {
          "command": "git-cl.unstashChangelist",
          "when": "scmProvider == git-cl && scmResourceGroup =~ /^stash:/",
          "group": "1_modification@1"
        },
        {
          "command": "git-cl.unstashChangelistForce",
          "when": "scmProvider == git-cl && scmResourceGroup =~ /^stash:/",
          "group": "1_modification@2"
        }
      ],
      "scm/resourceState/context": [
        {
          "command": "git-cl.openFileDiff",
          "when": "scmProvider == git-cl && scmResourceGroup =~ /^cl:/",
          "group": "inline@1"
        },
        {
          "command": "git-cl.removeFromChangelist",
          "when": "scmProvider == git-cl && scmResourceGroup =~ /^cl:/",
          "group": "inline@2"
        },
        {
          "command": "git-cl.addToChangelist",
          "when": "scmProvider == git",
          "group": "1_modification"
        },
        {
          "command": "git-cl.addToChangelist",
          "when": "scmProvider == git-cl && scmResourceGroup == unassigned",
          "group": "1_modification"
        },
        {
          "command": "git-cl.removeFromChangelist",
          "when": "scmProvider == git-cl && scmResourceGroup =~ /^cl:/",
          "group": "1_modification"
        },
        {
          "command": "git-cl.openFileDiff",
          "when": "scmProvider == git-cl && scmResourceGroup =~ /^cl:/",
          "group": "2_diff"
        }
      ]
    }
  },
  "scripts": {
    "build": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --target=es2020 --sourcemap",
    "watch": "npm run build -- --watch",
    "package": "npm run build -- --minify && vsce package",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "@types/vscode": "^1.85.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@vscode/vsce": "^3.3.2",
    "esbuild": "^0.27.3",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18"
  }
}
